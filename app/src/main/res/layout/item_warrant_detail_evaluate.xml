<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_6"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingTop="@dimen/dp_9">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_item_warrant_it_detail_evaluate_top"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:scaleType="centerCrop"
        app:riv_oval="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_warrant_detail_evaluate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontHint"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_item_warrant_detail_evaluate_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_warrant_detail_evaluate_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFontHint"
                android:textSize="@dimen/sp_12" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/tv_item_warrant_detail_evaluate_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_28"
                android:drawableLeft="@drawable/evaluate_small"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_item_warrant_detail_evaluate_zan_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/zan_gray"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
         <ImageView
             android:id="@+id/iv_item_warrant_detail_evaluate_trig"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/sanjiao"
             android:layout_marginTop="@dimen/dp_5"
             android:layout_marginLeft="@dimen/dp_15"/>
        <LinearLayout
            android:id="@+id/ll_item_warrant_detail_evaluate_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_solid_corner_evaluate_bg"
            android:orientation="vertical"
            android:padding="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_item_warrant_detail_evaluate_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_item_warrant_detail_evaluate_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/sp_12" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/tv_item_warrant_detail_evaluate_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:drawablePadding="@dimen/dp_8"
                android:drawableRight="@drawable/right_blue"

                android:textColor="@color/font_blue_big"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

