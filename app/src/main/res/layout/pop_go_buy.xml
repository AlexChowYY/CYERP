<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparentBg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_17"
        android:background="@drawable/shape_solid_white_corner_15"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pop_go_buy_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_25"
            android:src="@drawable/close_buy" />

        <LinearLayout
            android:id="@+id/ll_pop_buy_type_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_pop_buy_type_one_net"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_120"
                    android:padding="@dimen/dp_12" />

                <TextView
                    android:id="@+id/tv_pop_buy_type_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/net_mall"
                    android:textColor="@color/color_gray_personal"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_pop_buy_type_one_mall"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_120"
                    android:padding="@dimen/dp_12"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/micro_mall"
                    android:textColor="@color/color_gray_personal"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pop_buy_type_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_pop_buy_type_two"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_160"
                android:padding="@dimen/dp_12" />

            <TextView
                android:id="@+id/tv_pop_buy_type_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/micro_mall"
                android:textColor="@color/color_gray_personal"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:text="长按并识别图上二维码，超值优惠码将发送到您的注册手机，快去购买您心仪的宝贝吧~"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableLeft="@drawable/tips"
            android:drawablePadding="@dimen/dp_5"
            android:text="点击GO购即表示关注此Face"
            android:textColor="@color/colorGrayLine" />

    </LinearLayout>

</LinearLayout>