<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparentBg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:layout_margin="@dimen/dp_48"
        android:background="@drawable/shape_solid_white_corner5"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_40"
            android:text="@string/login_out_tips"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_18" />

        <View style="@style/HorizontalLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1.0"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_pop_login_out_cancel"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:textColor="@color/colorFontHint"
                android:text="@string/cancel"
                android:textSize="@dimen/sp_18"/>
            <View style="@style/VerticalLine"/>
            <TextView
                android:id="@+id/tv_pop_login_out_sure"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:textColor="@color/common_red"
                android:text="@string/sure_to_login_out"
                android:textSize="@dimen/sp_18"/>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>