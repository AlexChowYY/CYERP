<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg">

    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
        android:id="@+id/trk"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBg"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_activity_personal_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/personal_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_60">


                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/riv_activity_personal"
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="@dimen/dp_80"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                app:riv_oval="true" />

                            <TextView
                                android:id="@+id/tv_activity_personal_follow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|bottom"
                                android:layout_marginRight="@dimen/dp_56"
                                android:background="@drawable/shape_personal_deep_red"
                                android:drawableLeft="@drawable/follow_add"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dp_10"
                                android:text="@string/follow"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/sp_12" />

                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_activity_personal_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_12"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_19" />

                        <TextView
                            android:id="@+id/tv_activity_personal_introduce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_12"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_13" />

                        <LinearLayout
                            android:id="@+id/ll_activity_personal_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_20"

                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_activity_personal_fans"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/sp_17" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_6"
                                    android:text="@string/fans"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/sp_13" />

                            </LinearLayout>

                            <View
                                style="@style/VerticalLine"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@color/colorWhite" />

                            <LinearLayout
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_activity_personal_attention"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/sp_17" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_6"
                                    android:text="@string/follow"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/sp_13" />

                            </LinearLayout>

                            <View
                                style="@style/VerticalLine"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@color/colorWhite" />

                            <LinearLayout
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_activity_personal_favouriteCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/sp_17" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_6"
                                    android:text="@string/give_face"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/sp_13" />

                            </LinearLayout>

                            <View
                                style="@style/VerticalLine"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@color/colorWhite" />

                            <LinearLayout
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_activity_personal_warrant"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/sp_17" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_6"
                                    android:text="@string/warrant_it"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/sp_13" />

                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_15">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/brand" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="@string/his_warrant_it"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/sp_16" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0" />

                    <TextView
                        android:id="@+id/tv_activity_personal_all_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableRight="@drawable/right"
                        android:text="@string/all"
                        android:textColor="@color/color_gray_personal"
                        android:textSize="@dimen/sp_15" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/all_warrant_it" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="@string/all_warrant_it"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/sp_16" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0" />

                    <TextView
                        android:id="@+id/tv_activity_personal_latest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text="@string/latest"
                        android:textColor="@color/font_personal_red"
                        android:textSize="@dimen/sp_14" />


                    <TextView
                        android:id="@+id/tv_activity_personal_hot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hotest"
                        android:textColor="@color/color_gray_personal"
                        android:textSize="@dimen/sp_14" />


                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_activity_personal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_20">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>


    <ImageView
        android:id="@+id/iv_activity_personal_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:padding="@dimen/dp_15"
        android:scaleType="centerInside"
        android:src="@drawable/back_white" />
</FrameLayout>