<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_50"
        android:text="@string/bind_phone"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_30"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_activity_bind_phone_choose_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_56"
        android:gravity="center_vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country_region"
            android:textColor="@color/colorFontHint"
            android:textSize="@dimen/sp_17" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/tv_activity_bind_phone_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:text="@string/china"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_17" />

        <TextView

            android:id="@+id/tv_activity_bind_phone_country_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/right"
            android:text="+86"
            android:textColor="@color/font_blue_big"
            android:textSize="@dimen/sp_17" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_28"
        android:background="@drawable/shape_gray_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/user_name" />

        <View
            style="@style/VerticalLine"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10" />

        <EditText
            android:id="@+id/et_activity_bind_phone_phone"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="@string/phone_hint"
            android:inputType="phone"
            android:textColor="@color/font_gray"
            android:textColorHint="@color/colorFontHint"
            android:textSize="@dimen/sp_13" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/shape_gray_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/code" />

        <View
            style="@style/VerticalLine"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10" />

        <EditText
            android:id="@+id/et_activity_bind_phone_code"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="@string/code_hint"
            android:inputType="number"
            android:textColor="@color/font_gray"
            android:textColorHint="@color/colorFontHint"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_activity_bind_phone_send_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_red_corner_22"
            android:gravity="center"
            android:text="@string/send_code"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_12" />


    </LinearLayout>





    <TextView
        android:id="@+id/tv_activity_bind_phone_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/selector_account_btn_bg"
        android:gravity="center"
        android:text="@string/login_1"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />


</LinearLayout>