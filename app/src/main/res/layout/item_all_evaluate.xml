<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_5"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingTop="@dimen/sp_10">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_item_all_evaluate"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:scaleType="centerCrop"
        app:riv_oval="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_all_evaluate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontHint"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_item_all_evaluate_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_all_evaluate_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFontHint"
                android:textSize="@dimen/sp_12" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/tv_item_all_evaluate_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_28"
                android:drawableLeft="@drawable/evaluate_small"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_item_all_evaluate_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/zan_gray"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_trig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sanjiao"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_15"/>
        <LinearLayout
            android:id="@+id/ll_item_all_evaluate_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_solid_corner_evaluate_bg"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_16">
            <TextView
                android:id="@+id/tv_item_all_evaluate_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_item_all_evaluate_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_item_all_evaluate_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@drawable/blue_down"
                android:textColor="@color/font_blue_big"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>