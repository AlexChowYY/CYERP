<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_item_face_me"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_33"
            android:scaleType="centerCrop"
            app:riv_oval="true" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_face_me_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刘德华"
                    android:textColor="@color/colorFontHint"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/tv_item_face_me_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="2018-12-2"
                    android:textColor="@color/colorFontHint"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <LinearLayout
                android:id="@+id/ll_item_face_me_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_stroke_gray_follow"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_item_face_me_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/add_follow"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/follow"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginTop="@dimen/dp_8">

            <TextView
                android:id="@+id/tv_item_face_me_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_55"
                android:layout_marginTop="@dimen/dp_2"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_item_face_me_brand_top_url"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_2"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_item_face_me_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/red_dian"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_item_face_me_brand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_corner_brand_name"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/sp_13" />


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>