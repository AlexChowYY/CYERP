                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_11"
                    android:text="@string/wish"
                    android:textColor="@color/colorFontHint"
                    android:textSize="@dimen/sp_12" />


            </LinearLayout>

