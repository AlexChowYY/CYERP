<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_item_evaluate_and_reply"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_33"
            android:scaleType="centerCrop"
            app:riv_oval="true" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_evaluate_and_reply_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_6"
                        android:text="刘德华"
                        android:textColor="@color/colorFontHint"
                        android:textSize="@dimen/sp_14" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_item_evaluate_and_reply_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="2018-12-2"
                    android:textColor="@color/colorFontHint"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_item_evaluate_and_reply_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"

                    />
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <LinearLayout
                android:id="@+id/ll_item_evaluate_and_reply_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_stroke_gray_follow"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_item_evaluate_and_reply_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/add_follow"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/follow"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_item_evaluate_and_reply_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_item_none_corner_common_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_evaluate_and_reply_content"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:lines="2"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_23"
                    android:paddingTop="@dimen/dp_15"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/riv_evaluate_and_reply_pic"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/iv_item_evaluate_and_reply_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/red_dian"
                    android:visibility="gone" />

            </LinearLayout>
        </FrameLayout>


    </LinearLayout>

</LinearLayout>