<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <include layout="@layout/layout_top_back" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/tfl_activity_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        zhy:max_select="1"></com.zhy.view.flowlayout.TagFlowLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_20"
        android:text="@string/question_describe"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/sp_16" />

    <View
        style="@style/HorizontalLine"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15" />

    <EditText
        android:id="@+id/et_activity_question_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:background="@color/colorWhite"
        android:gravity="left"
        android:padding="@dimen/dp_15"
        android:textColor="@color/font_gray"
        android:textColorHint="@color/colorFontHint"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="right"
        android:paddingBottom="@dimen/dp_10"
        android:paddingRight="@dimen/dp_20"
        android:text="0/20"
        android:textColor="@color/colorFontHint"
        android:textSize="@dimen/sp_14" />

    <View
        style="@style/HorizontalLine"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_15">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <ImageView
            android:id="@+id/iv_activity_question_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/jinghao" />

        <ImageView
            android:id="@+id/iv_activity_question_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/voice_black" />

        <ImageView
            android:id="@+id/iv_activity_question_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/aite" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_activity_question_ai_te"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/sp_14"

        />


</LinearLayout>