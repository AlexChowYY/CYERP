<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_50"
        android:text="@string/consummate"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_30"
        android:textStyle="bold" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_activity_consummate_date_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_add_head_gray"
        android:scaleType="centerInside"
        android:src="@drawable/add_head"
        app:riv_oval="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/shape_gray_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/name"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/sp_16" />

        <View
            style="@style/VerticalLine"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10" />

        <EditText
            android:id="@+id/et_consummate_date_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="@string/name_hint"
            android:inputType="text"
            android:textColor="@color/font_gray"
            android:textColorHint="@color/colorFontHint" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_activity_consummate_data_province"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/shape_gray_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/prince"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/sp_16" />

        <View
            style="@style/VerticalLine"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_activity_consummate_data_province"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1.0"
            android:gravity="left|center_vertical"
            android:hint="@string/choose_prince"
            android:textColor="@color/font_gray"
            android:textColorHint="@color/colorFontHint"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_activity_consummate_data_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/shape_gray_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/city"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/sp_16" />

        <View
            style="@style/VerticalLine"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_activity_consummate_data_city"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1.0"
            android:gravity="left|center_vertical"
            android:hint="@string/city_hint"
            android:textColor="@color/font_gray"
            android:textColorHint="@color/colorFontHint"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/shape_gray_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/invite_code"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/sp_16" />


        <EditText
            android:id="@+id/et_activity_consummate_data_invite"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="@string/invite_hint"
            android:inputType="phone"
            android:textColor="@color/font_gray"
            android:textColorHint="@color/colorFontHint" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_activity_consummate_data_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_26"
        android:background="@drawable/selector_account_btn_bg"
        android:gravity="center"
        android:text="@string/register"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

</LinearLayout>