<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_item_personal_goods_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_item_personal_goods_new"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/shape_circle_red"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginRight="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_personal_goods_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:id="@+id/tv_item_personal_goods_face_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@drawable/smile"
            android:drawablePadding="@dimen/dp_5"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/sp_12"


            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_9"
        android:layout_marginRight="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_11"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_item_personal_goods_time"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="2018-05-25"
            android:textColor="@color/colorFontHint"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_item_personal_goods_buy_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@drawable/shop_car"
            android:drawablePadding="@dimen/dp_5"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>


</LinearLayout>