<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_50"
        android:text="@string/register_by_phone"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_30"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_activity_register_choose_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_56"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country_region"
            android:textColor="@color/colorFontHint"
            android:textSize="@dimen/sp_17" />



        <TextView
            android:id="@+id/tv_activity_register_country"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginRight="@dimen/dp_10"
            android:text="@string/china"
            android:textColor="@color/colorBlack"
            android:ellipsize="end"
            android:gravity="right"
            android:lines="1"
            android:textSize="@dimen/sp_17" />

        <TextView

            android:id="@+id/tv_activity_register_country_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/right"
            android:text="+86"
            android:textColor="@color/font_blue_big"
            android:textSize="@dimen/sp_17" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_28"
        android:background="@drawable/shape_gray_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/user_name" />

        <View
            style="@style/VerticalLine"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10" />

        <EditText
            android:id="@+id/et_activity_register_phone"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="@string/phone_hint"
            android:inputType="phone"
            android:textColor="@color/font_gray"
            android:textColorHint="@color/colorFontHint"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/shape_gray_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/code" />

        <View
            style="@style/VerticalLine"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10" />

        <EditText
            android:id="@+id/et_activity_register_code"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="@string/code_hint"
            android:inputType="number"
            android:textColor="@color/font_gray"
            android:textColorHint="@color/colorFontHint"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_activity_register_send_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_red_corner_22"
            android:gravity="center"
            android:text="@string/send_code"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_12" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/shape_gray_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/pwd" />

        <View
            style="@style/VerticalLine"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10" />

        <EditText
            android:id="@+id/et_activity_register_pwd"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="@string/pwd_hint"
            android:inputType="textPassword"
            android:textColor="@color/font_gray"
            android:textColorHint="@color/colorFontHint"
            android:textSize="@dimen/sp_16" />

        <ImageView

            android:id="@+id/iv_activity_register_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/eye_close" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_65"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_activity_register_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gou_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/have_agree"
            android:textColor="@color/colorFontHint"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_activity_protocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/protocal"
            android:textColor="@color/font_red"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_activity_register_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/selector_account_btn_bg"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />


</LinearLayout>