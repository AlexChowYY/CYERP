<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_face_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_item_face_new_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/shape_circle_red"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_10"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_6"
        android:paddingRight="@dimen/dp_7">

        <TextView
            android:id="@+id/tv_item_face_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="王健林"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_15" />


        <TextView
            android:id="@+id/tv_item_face_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/love"
            android:drawablePadding="@dimen/dp_4"
            android:text="2222"
            android:textColor="@color/colorGray7"
            android:textSize="@dimen/sp_12" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_face_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:gravity="left"
        android:lines="1"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_7"
        android:textColor="@color/colorGray6"
        android:textSize="@dimen/sp_12" />


</LinearLayout>