<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <include layout="@layout/layout_top_back" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_activity_feedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorWhite"
            android:gravity="left"
            android:maxLength="200"
            android:padding="@dimen/dp_15"
            android:hint="请在此输入您的反馈意见~"
            android:textColor="@color/font_gray"
            android:textColorHint="@color/colorFontHint"
            android:textSize="@dimen/sp_16" />

        <TextView
           android:id="@+id/tv_activity_feedback_number_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontHint"
            android:textSize="@dimen/sp_14"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_10"
           />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_activity_feedback_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/selector_common_btn"
        android:gravity="center"
        android:text="@string/commit"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_18" />


</LinearLayout>