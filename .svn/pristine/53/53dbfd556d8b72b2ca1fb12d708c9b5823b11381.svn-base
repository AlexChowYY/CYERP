<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparentBg2"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray4"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_21"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_21">

        <LinearLayout
            android:id="@+id/ll_pop_share_wechart_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_wechart_share_bg"
                android:scaleType="centerInside"
                android:src="@drawable/wechart_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/wechart_friends"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pop_share_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_wechart_share_bg"
                android:scaleType="centerInside"
                android:src="@drawable/friend_circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/circle"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_pop_share_wechart_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_17"
        android:paddingTop="@dimen/dp_17"
        android:text="@string/cancel"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_17" />

</LinearLayout>