<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dp_2"
    android:layout_marginTop="@dimen/dp_15"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_all_evaluate_evaluate_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_6"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/font_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_12">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_all_evaluate_evaluate_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFontHint"
                android:textColorHint="@color/colorFontHint"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/tv_item_all_evaluate_evaluate_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_28"
            android:drawableLeft="@drawable/evaluate_small"
            android:textColor="@color/font_gray"
            android:drawablePadding="@dimen/dp_5"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_item_all_evaluate_evaluate_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/zan_gray"
            android:textColor="@color/font_gray"
            android:drawablePadding="@dimen/dp_5"
            android:textSize="@dimen/sp_12" />


    </LinearLayout>


</LinearLayout>