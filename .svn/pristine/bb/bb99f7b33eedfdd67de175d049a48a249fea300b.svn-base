<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparentBg"
    android:gravity="bottom"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_pop_group_member_top"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_26"
            android:scaleType="centerCrop"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/tv_pop_group_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/sp_17" />

        <View style="@style/HorizontalLine" />

        <TextView
            android:id="@+id/tv_pop_group_member_home_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_17"
            android:paddingBottom="@dimen/dp_17"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:text="@string/personal_home"
            android:textColor="@color/font_red" />

        <View style="@style/HorizontalLine" />

        <TextView
            android:id="@+id/tv_pop_group_member_question_him"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_17"
            android:paddingTop="@dimen/dp_17"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:text="@string/question_him"
            android:textColor="@color/font_red" />


    </LinearLayout>

</LinearLayout>