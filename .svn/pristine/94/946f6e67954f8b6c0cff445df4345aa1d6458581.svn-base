<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_50"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_30"

            android:textStyle="bold" />

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/tv_activity_login_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:layout_marginRight="@dimen/dp_60"
            android:text="@string/code_login"
            android:textColor="@color/colorFontHint"
            android:textSize="@dimen/sp_19" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_activity_login_choose_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_56"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country_region"
            android:textColor="@color/colorFontHint"
            android:textSize="@dimen/sp_17" />


        <TextView
            android:id="@+id/tv_activity_login_country"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:gravity="right"
            android:lines="1"
            android:text="@string/china"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_activity_login_country_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/right"
            android:text="+86"
            android:textColor="@color/font_blue_big"
            android:textSize="@dimen/sp_17" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_28"
        android:background="@drawable/shape_gray_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/user_name" />

        <View
            style="@style/VerticalLine"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10" />

        <EditText
            android:id="@+id/et_activity_login_phone"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="@string/phone_hint"
            android:inputType="phone"
            android:textColor="@color/font_gray"
            android:textColorHint="@color/colorFontHint"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/shape_gray_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/pwd" />

        <View
            style="@style/VerticalLine"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10" />

        <EditText
            android:id="@+id/et_activity_login_pwd"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1.0"
            android:background="@null"
            android:fitsSystemWindows="true"
            android:hint="@string/pwd_hint"
            android:inputType="textPassword"
            android:textColor="@color/font_gray"
            android:textColorHint="@color/colorFontHint"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_activity_login_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/eye_close" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_activity_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_26"
        android:background="@drawable/shape_little_red_corner"
        android:clickable="false"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_90"
        android:layout_marginRight="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_activity_login_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/forget_pwd"
            android:textColor="@color/colorFontHint"

            android:textSize="@dimen/sp_14" />

        <View
            style="@style/VerticalLine"
            android:layout_height="@dimen/dp_15"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tv_activity_login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/instance_register"
            android:textColor="@color/font_red"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            style="@style/HorizontalLine"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:text="@string/login_from_other"
            android:textColor="@color/colorFontHint"
            android:textSize="@dimen/sp_15" />

        <View
            style="@style/HorizontalLine"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1.0" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_activity_login_wechart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_circle"
                android:padding="@dimen/dp_10"
                android:src="@drawable/we_chart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/wechart"
                android:textColor="@color/colorFontHint"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_activity_login_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_circle"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ali_pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/ali_pay"
                android:textColor="@color/colorFontHint"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_activity_login_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_circle"
                android:padding="@dimen/dp_10"
                android:src="@drawable/weibo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/weibo"
                android:textColor="@color/colorFontHint"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>