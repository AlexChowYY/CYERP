<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparentBg"
    android:gravity="bottom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_pop_pictrue_select_take"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:text="@string/take_photo"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/sp_17" />

    <View style="@style/HorizontalLine" />

    <TextView
        android:id="@+id/tv_pop_pictrue_select_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:text="@string/pictrue_library"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/sp_17" />
    <View style="@style/HorizontalLine" />

    <TextView
        android:id="@+id/tv_pop_pictrue_select_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:text="@string/cancel"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/sp_17" />

</LinearLayout>