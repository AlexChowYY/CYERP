<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <include layout="@layout/layout_top_back" />

    <RelativeLayout
        android:id="@+id/rl_activity_setting_change_head"
        style="@style/settingRL"
        android:layout_marginTop="@dimen/dp_5">

        <TextView
            style="@style/MineTextView"
            android:layout_centerVertical="true"
            android:text="@string/update_icon" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_activity_setting_head"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"

            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/iv"
            android:scaleType="centerCrop"
            app:riv_oval="true" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_activity_setting_account"
        style="@style/settingRL"
        android:layout_marginTop="@dimen/dp_1">

        <TextView
            style="@style/MineTextView"
            android:text="@string/account_safe" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_fragment_clear_cache"
        style="@style/settingRL"
        android:layout_marginTop="@dimen/dp_5">

        <TextView
            style="@style/MineTextView"
            android:text="@string/clear_cache" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_activity_setting_feedback"
        style="@style/settingRL"
        android:layout_marginTop="@dimen/dp_1">

        <TextView
            style="@style/MineTextView"
            android:text="@string/feedback" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_black" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_activity_setting_version"
        style="@style/settingRL"
        android:layout_marginTop="@dimen/dp_1">

        <TextView
            style="@style/MineTextView"
            android:text="@string/version" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_black" />

    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" />

    <TextView
        android:id="@+id/tv_activity_setting_login_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginBottom="@dimen/dp_34"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_38"
        android:gravity="center"
        android:text="@string/login_out"
        android:textColor="@color/common_red"
        android:textSize="@dimen/sp_18"
        android:background="@drawable/shape_login_out_bg"/>


</LinearLayout>