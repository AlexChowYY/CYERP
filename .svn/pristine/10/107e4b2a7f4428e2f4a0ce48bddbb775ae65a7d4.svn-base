<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparentBg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_group_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginRight="@dimen/dp_47"
        android:background="@drawable/shaope_divide_group_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/choose_face_group"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"

            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_pop_divider_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_add_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableLeft="@drawable/add_red"
            android:drawablePadding="@dimen/dp_5"
            android:text="@string/new_face_group"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/sp_14" />

        <View style="@style/HorizontalLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pop_add_face_group_cancel"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/not_group"
                android:textColor="@color/colorFontHint"
                android:textSize="@dimen/sp_18" />

            <View style="@style/VerticalLine" />

            <TextView
                android:id="@+id/tv_pop_add_face_group_sure"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/font_red"
                android:textSize="@dimen/sp_18" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
       android:id="@+id/tv_item_pop_divider_group_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_48"
        android:background="@drawable/shape_solid_white_corner5"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/new_face_group"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"

            />

        <EditText
            android:id="@+id/et_pop_add_face_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/shape_solid_gray_corner_5"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="@string/input_face_name"
            android:maxLength="10"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/sp_15" />


        <View
            style="@style/HorizontalLine"
            android:layout_marginTop="@dimen/dp_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pop_a"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/colorFontHint"
                android:textSize="@dimen/sp_18" />

            <View style="@style/VerticalLine" />

            <TextView
                android:id="@+id/tv_pop_add_face_add_sure"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/font_red"
                android:textSize="@dimen/sp_18" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>