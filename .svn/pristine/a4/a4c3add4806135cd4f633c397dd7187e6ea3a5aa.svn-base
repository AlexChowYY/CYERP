<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparentBg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_48"
        android:background="@drawable/shape_solid_white_corner5"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_25"
            android:textColor="@color/colorBlack"
            android:text="@string/new_group"
            android:textSize="@dimen/sp_18" />

        <EditText
            android:id="@+id/et_pop_add_face_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/shape_solid_gray_corner_5"
            android:gravity="center"
            android:hint="@string/input_face_name"
            android:focusableInTouchMode="true"
            android:maxLength="10"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/sp_15" />

        <View
            style="@style/HorizontalLine"
            android:layout_marginTop="@dimen/dp_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pop_add_face_group_cancel"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/colorFontHint"
                android:textSize="@dimen/sp_18" />

            <View style="@style/VerticalLine" />

            <TextView
                android:id="@+id/tv_pop_add_face_group_sure"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/font_blue_big"
                android:textSize="@dimen/sp_18" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>